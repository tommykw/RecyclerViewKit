    <name>Resources finder</name>
    <version>1.0.0</version>
    <vendor email="destinys.lotus.1108mn@gmail.com" url="https://github.com/tommykw/android-resources-finder-plugin"></vendor>

    <description><![CDATA[
      This plugin help you to find resources in your Android project.
    ]]></description>

    <change-notes><![CDATA[
      1.0.0: Initial release.<br>
    ]]></change-notes>

    <idea-version since-build="131"/>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

