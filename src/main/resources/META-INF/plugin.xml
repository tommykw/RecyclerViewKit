        <group id="ResourceFinder.CodeMenu.Group" text="Resource Finder" description="Resource Finder">
            <add-to-group group-id="CodeMenu" anchor="last"  />
            <action id="ResourceFinder.CodeMenu.Action" class="ResourceFinderAction" text="Resource Finder" description="Resource Finder" />
        </group>
    </actions>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
